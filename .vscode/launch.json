{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Run.ts",
            "runtimeExecutable": "tsx",
            "runtimeArgs": [
                "watch"
            ],
            "args": [
                "${workspaceFolder}/run.ts"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Rollup",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "watch"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "sourceMaps": true
            // "autoAttachChildProcesses": true,
            // "sourceMapPathOverrides": {
            //     "webpack:///./*": "${workspaceRoot}/*"
            // }
        }
    ]
}